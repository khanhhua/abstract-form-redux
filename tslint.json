{
  "extends": [
    "tslint-eslint-rules"
  ],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "quotemark": [true, "single"],
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  },
  "linterOptions": {
    "exclude": [
      "src/*.spec.ts",
      "lib/*generated.js"
    ]
  }
}